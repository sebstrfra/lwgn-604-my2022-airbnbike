<h1>Hi <%= current_user.first_name %> 👋. Great to see you!</h1>

<br>
<br>
<div class="container">

  <h3>Your Bikes</h3>
  <br>

  <% @bikes.each do |bike| %>
    <div>
      <div class="card-product">
        <%= cl_image_tag bike.photos.first.key %>
        <div class="card-product-infos">
          <h2><%= bike.name %></h2>
          <p>📍 <%= bike.location %> <br></p>
        </div>
      </div>
      <div class ="card-product-bookings">
        <p>Bookings for this bike:</p>
        <ul class="list-group">
          <% bike.bookings.order(:start_date).each do |booking| %>
            <li class="list-group-item">
              <div class= card-product-bookings-line>
                <div>
                  to <strong><%= booking.user.first_name %></strong> from <%= booking.start_date.strftime("%b %d, %Y") %> to <%= booking.end_date.strftime("%b %d, %Y") %> <br>
                </div>
                <div class= card-product-bookings-line-options>
                  ✉️ 🗑
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <br>
  <% end %>


  <br>
  <br>
  <br>


  <h3>Your Bookings </h3> <br>
  <% @bookings.each do |booking| %>
  <div class="card-product">
    <%= cl_image_tag booking.bike.photos.first.key %>
    <div class="card-product-infos">
      <h2><%= booking.bike.name %></h2>
      (from <%= booking.bike.user.first_name %>)
      <p>📍 <%= booking.bike.location %> <br>📆  <%= booking.start_date.strftime("%b %d, %Y") %> - <%= booking.end_date.strftime("%b %d, %Y") %> (<%= (booking.end_date - booking.start_date).to_i %> days)</p>
    </div>
  </div>
  <% end %>

</div>

<br>
<br>
<br>
<br>
<br>







