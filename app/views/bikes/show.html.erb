<h1> <%= @bike.name %></h1>

<div class="img-container">
  <div class="main-img">
    <%= image_tag(@bike.picture_link) %>
  </div>
  <div class="right-grid-img">
    <%= image_tag("main-bikeG.jpg") %>
    <%= image_tag("rock-bikeG.jpg") %>
    <%= image_tag("snow-bikeG.jpg") %>
    <%= image_tag("bar-bikeG.jpg") %>
  </div>
</div>


<div class="booking-container">

  <div class="bike-description">
  <h1>Description</h1>
    <p>
      <%= @bike.description %>
    </p>
  </div>


  <div class="booking-form">
    <h1>Book your Bike</h1>
    <div class ="form-box">
      <%= simple_form_for [@bike, @booking] do |f| %>

        <div class ="start-date">
          <%= f.input :start_date %>
        </div>

        <div class ="end-date">
          <%= f.input :end_date %>
        </div>


          <%= f.button :submit, "Book", class: "my-button" %>

      <% end %>
    </div>
  </div>

</div>
